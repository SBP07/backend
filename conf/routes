# Home page
GET     /                      controllers.ApplicationController.home

# For continuous delivery
GET     /heartbeat              controllers.ApplicationController.heartbeat

# Animators
GET     /animator              controllers.CrewController.list
GET     /animator/             controllers.CrewController.list
GET     /animator/lijst        controllers.CrewController.list
GET     /animator/details/:id  controllers.CrewController.details(id: String)
GET     /animator/nieuw        controllers.CrewController.newCrewMember
POST    /animator/nieuw        controllers.CrewController.saveCrewMember
GET     /animator/edit/:id     controllers.CrewController.editCrewMember(id: String)

# Children
GET     /kind               controllers.ChildController.showList
GET     /kind/              controllers.ChildController.showList
GET     /kind/lijst         controllers.ChildController.showList
GET     /kind/nieuw         controllers.ChildController.newChild
POST    /kind/nieuw         controllers.ChildController.saveChild
GET     /kind/edit/:id      controllers.ChildController.editChild(id: String)
GET     /kind/details/:id   controllers.ChildController.details(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# WebJar routing (for bootstrap, ...)
GET		/webjars/*file				controllers.WebJarAssets.at(file)
