# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

### API

# ...

### Unprotected API (for testing)

GET     /api/unprotected/tenant             controllers.api.TenantController.getAll
POST    /api/unprotected/tenant             controllers.api.TenantController.create
GET     /api/unprotected/tenant/id/:id      controllers.api.TenantController.getById(id: java.util.UUID)
PUT     /api/unprotected/tenant             controllers.api.TenantController.update
DELETE  /api/unprotected/tenant/id/:id      controllers.api.TenantController.delete(id: java.util.UUID)

GET     /api/unprotected/address             controllers.api.AddressController.getAll
POST    /api/unprotected/address             controllers.api.AddressController.create
GET     /api/unprotected/address/id/:id      controllers.api.AddressController.getById(id: java.util.UUID)
PUT     /api/unprotected/address             controllers.api.AddressController.update
DELETE  /api/unprotected/address/id/:id      controllers.api.AddressController.delete(id: java.util.UUID)

GET     /api/unprotected/child             controllers.api.ChildController.getAll
POST    /api/unprotected/child             controllers.api.ChildController.create
GET     /api/unprotected/child/id/:id      controllers.api.ChildController.getById(id: java.util.UUID)
PUT     /api/unprotected/child             controllers.api.ChildController.update
DELETE  /api/unprotected/child/id/:id      controllers.api.ChildController.delete(id: java.util.UUID)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
