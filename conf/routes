# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /api/v0/child                  controllers.api.Child.getAll
POST    /api/v0/child                  controllers.api.Child.create
GET     /api/v0/child/id/:id           controllers.api.Child.getById(id: Long)
PUT     /api/v0/child                  controllers.api.Child.update
DELETE  /api/v0/child/id/:id           controllers.api.Child.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
