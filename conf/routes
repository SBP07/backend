# Home page
GET     /                      controllers.Application.home

# For continuous delivery
GET     /heartbeat              controllers.Application.heartbeat

# Presences
GET     /aanwezigheden              controllers.Presences.presentToday
POST    /aanwezigheden/update       controllers.Presences.saveUpdate
GET     /aanwezigheden/update/:id   controllers.Presences.updateWithId(id: Long)
GET     /aanwezigheden/nieuw        controllers.Presences.register
GET     /aanwezigheden/nieuw/:id    controllers.Presences.registerWithId(id: Long)
POST    /aanwezigheden/nieuw        controllers.Presences.savePresence


# Shifts
GET     /dagdelen                 controllers.Shifts.list
GET     /dagdelen/                controllers.Shifts.list
GET     /dagdelen/lijst           controllers.Shifts.list
GET     /dagdelen/nieuw           controllers.Shifts.newShift
POST    /dagdelen/nieuw           controllers.Shifts.saveShift
GET     /dagdelen/update/:date    controllers.Shifts.updateShift(date: String)
GET     /dagdelen/details/:id     controllers.Shifts.detailsShifts(id: Long)
GET     /dagdelen/delete/:id      controllers.Shifts.deleteShift(id: Long)
POST    /dagdelen/delete          controllers.Shifts.reallyDeleteShift

# Animators
GET     /animator              controllers.Animators.list
GET     /animator/             controllers.Animators.list
GET     /animator/lijst        controllers.Animators.list
GET     /animator/details/:id  controllers.Animators.details(id: Long)
GET     /animator/nieuw        controllers.Animators.newAnimator
POST    /animator/nieuw        controllers.Animators.saveAnimator
GET     /animator/edit/:id     controllers.Animators.editAnimator(id: Long)

# Children
GET     /kind               controllers.Children.showList
GET     /kind/              controllers.Children.showList
GET     /kind/lijst         controllers.Children.showList
GET     /kind/nieuw         controllers.Children.newChild
POST    /kind/nieuw         controllers.Children.saveChild
GET     /kind/edit/:id      controllers.Children.editChild(id: Long)
GET     /kind/details/:id   controllers.Children.details(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# WebJar routing (for bootstrap, ...)
GET		/webjars/*file				controllers.WebJarAssets.at(file)
