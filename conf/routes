# Home page
GET     /                      controllers.ApplicationController.home

# For continuous delivery
GET     /heartbeat              controllers.ApplicationController.heartbeat

# Presences
GET     /aanwezigheden              controllers.PresencesController.presentToday
POST    /aanwezigheden/update       controllers.PresencesController.saveUpdate
GET     /aanwezigheden/update/:id   controllers.PresencesController.updateWithId(id: Long)
GET     /aanwezigheden/nieuw        controllers.PresencesController.register
GET     /aanwezigheden/nieuw/:id    controllers.PresencesController.registerWithId(id: Long)
POST    /aanwezigheden/nieuw        controllers.PresencesController.savePresence


# Shifts
GET     /dagdelen                 controllers.ShiftController.list
GET     /dagdelen/                controllers.ShiftController.list
GET     /dagdelen/lijst           controllers.ShiftController.list
GET     /dagdelen/nieuw           controllers.ShiftController.newShift
POST    /dagdelen/nieuw           controllers.ShiftController.saveShift
GET     /dagdelen/update/:date    controllers.ShiftController.updateShift(date: String)
GET     /dagdelen/details/:id     controllers.ShiftController.detailsShifts(id: Long)
GET     /dagdelen/delete/:id      controllers.ShiftController.deleteShift(id: Long)
POST    /dagdelen/delete          controllers.ShiftController.reallyDeleteShift

# Animators
GET     /animator              controllers.AnimatorController.list
GET     /animator/             controllers.AnimatorController.list
GET     /animator/lijst        controllers.AnimatorController.list
GET     /animator/details/:id  controllers.AnimatorController.details(id: Long)
GET     /animator/nieuw        controllers.AnimatorController.newAnimator
POST    /animator/nieuw        controllers.AnimatorController.saveAnimator
GET     /animator/edit/:id     controllers.AnimatorController.editAnimator(id: Long)

# Children
GET     /kind               controllers.ChildController.showList
GET     /kind/              controllers.ChildController.showList
GET     /kind/lijst         controllers.ChildController.showList
GET     /kind/nieuw         controllers.ChildController.newChild
POST    /kind/nieuw         controllers.ChildController.saveChild
GET     /kind/edit/:id      controllers.ChildController.editChild(id: Long)
GET     /kind/details/:id   controllers.ChildController.details(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# WebJar routing (for bootstrap, ...)
GET		/webjars/*file				controllers.WebJarAssets.at(file)
