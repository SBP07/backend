# Home page
#GET     /                           controllers.Application.index()

# Animators
GET     /animators/lijst        controllers.Animators.list

# Children
GET     /kind/lijst         controllers.Children.showList
GET     /kind/nieuw         controllers.Children.newChild
POST    /kind/nieuw         controllers.Children.saveChild
GET     /kind/edit/:id      controllers.Children.editChild(id: Long)
GET     /kind/details/:id   controllers.Children.details(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# WebJar routing (for bootstrap, ...)
GET		/webjars/*file				controllers.WebJarAssets.at(file)